<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:id="@+id/dialog_popup_window"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="@dimen/card_margin_42"
            app:strokeWidth="0dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/detail_linear_layout"
                style="@style/WhitePage"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/pet_name_tv"
                    style="@style/H2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_sixteen"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@tools:sample/full_names" />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/pet_type_tv"
                        style="@style/H3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:textAlignment="textEnd"
                        tools:text="Dog" />

                    <TextView
                        style="@style/H4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/line"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/pet_breed_tv"
                        style="@style/H3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="Labrador" />
                </LinearLayout>

                <TextView
                    android:id="@+id/pet_desc_tv"
                    style="@style/H3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_8dp"
                    android:maxLines="6"
                    android:text="@tools:sample/lorem/random"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_8dp"
                            android:text="@string/age"
                            android:textStyle="bold"
                            app:drawableStartCompat="@drawable/ic_dot" />

                        <TextView
                            android:id="@+id/pet_age_tv"
                            style="@style/H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            tools:text="@tools:sample/date/ddmmyy" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_8dp"
                            android:text="@string/inoculations"
                            android:textStyle="bold"
                            app:drawableStartCompat="@drawable/ic_dot" />

                        <TextView
                            android:id="@+id/pet_inoculations_tv"
                            style="@style/H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            tools:text="@string/none" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_8dp"
                            android:text="@string/diseases"
                            android:textStyle="bold"
                            app:drawableStartCompat="@drawable/ic_dot" />

                        <TextView
                            android:id="@+id/pet_diseases_tv"
                            style="@style/H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            tools:text="@string/none" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_8dp"
                            android:text="@string/parasites"
                            android:textStyle="bold"
                            app:drawableStartCompat="@drawable/ic_dot" />

                        <TextView
                            android:id="@+id/pet_parasites_tv"
                            style="@style/H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            tools:text="@string/none" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic__close_button" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>